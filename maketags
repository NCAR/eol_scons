#! /bin/sh

rm -f TAGS

print0='-print0'
xargs='xargs -0 etags -a'
if [ "$1" = list ]; then
    print0='-print'
    xargs='cat'
fi
find . \( -name build -type d -prune \) -o \
    \( -name "*.hh" -o -name "*.hpp" -o -name "*.h" -o -name "*.cc" -o \
       -name "*.cpp" -o -name "*.c" \) \
       -a ! -name "moc_*" -a ! -name '.#*' $print0 | $xargs
